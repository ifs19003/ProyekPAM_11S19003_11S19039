<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".pemilik.LaundryActivity">

    <ImageView
        android:id="@+id/profileLaundry"
        android:layout_width="match_parent"
        android:layout_height="150dp"></ImageView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/namaLaundry"
        android:textSize="25sp"
        android:text="Laundry Sejahtera"
        android:textAlignment="center"
        ></TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/kodeLaundry"
        android:textSize="20sp"
        android:text="Laundry Sejahtera"
        android:textAlignment="center"
        ></TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/alamatLaundry"
        android:textSize="20sp"
        android:text="Laundry Sejahtera"
        android:textAlignment="center"
        ></TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/deskripsiLaundry"
        android:textSize="20sp"
        android:text="Laundry Sejahtera"
        android:textAlignment="center"
        ></TextView>
</LinearLayout>