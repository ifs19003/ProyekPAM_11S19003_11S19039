<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".pemilik.OrderDetailActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="676dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp">

        <Button
            android:id="@+id/btnStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_status"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/young_green"
            android:text="Iron"
            android:textColor="@color/grey"
            android:textSize="14dp" />


        <ImageView
            android:id="@+id/img_left_sign"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/left_sign" />

        <TextView
            android:id="@+id/tv_detail_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:text="Detail Order"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtCaptDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnStatus"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="Order Details"
            android:textColor="#223263"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtCaptOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rvDetailOrder"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="Items"
            android:textColor="#223263"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_detail_order"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="Status"
            android:textSize="16sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvDetailItems"
            android:layout_width="wrap_content"
            android:layout_height="149dp"
            android:layout_below="@id/txtCaptOrder"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="16dp"
            tools:listitem="@layout/item_card_detail">
        </androidx.recyclerview.widget.RecyclerView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvDetailOrder"
            android:layout_width="320dp"
            android:layout_height="139dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="210dp">
        </androidx.recyclerview.widget.RecyclerView>

        <Button
            android:id="@+id/btnNotify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rvDetailItems"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="10dp"
            android:text="Notify me"
            android:backgroundTint="#40BFFF"
            android:textColor="@color/white"
            android:textSize="14dp" />


    </RelativeLayout>



</RelativeLayout>